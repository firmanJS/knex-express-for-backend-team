{
	"/todo": {
		"get": {
			"tags": ["Todo"],
			"security": [
				{
					"bearerAuth": []
				}
			],
			"parameters": [
				{
					"in": "query",
					"name": "limit",
					"required": false,
					"schema": {
						"type": "integer"
					},
					"description": "Limit value is number by default limit is 10. ex : ?limit=100"
				},
				{
					"in": "query",
					"name": "page",
					"required": false,
					"schema": {
						"type": "number"
					},
					"description": "Page value is number. ex : ?page=1"
				},
				{
					"in": "query",
					"name": "direction",
					"required": false,
					"schema": {
						"type": "array or string"
					},
					"description": "Direction value is array / string with rule if array ex : ?direction[]=id&direction[]=name. if string ex : ?direction=id"
				},
				{
					"in": "query",
					"name": "order",
					"required": false,
					"schema": {
						"type": "array or string"
					},
					"description": "Direction value is array / string with rule if array ex : ?order[]=asc&order[]=desc. if string ex : ?order=asc"
				},
				{
					"in": "query",
					"name": "search",
					"required": false,
					"schema": {
						"type": "string"
					},
					"description": "Search value is string with rule ex : ?search=Hitam"
				}
			],
			"responses": {
				"200": {
					"description": "OK",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaPaginationResponse"
							}
						}
					}
				}
			}
		},
		"post": {
			"tags": ["Todo"],
			"security": [
				{
					"bearerAuth": []
				}
			],
			"requestBody": {
				"required": false,
				"content": {
					"application/json": {
						"schema": {
							"$ref": "#/components/schemas/SchemaTodoRequest"
						}
					}
				}
			},
			"responses": {
				"200": {
					"description": "OK",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/SchemaTodo"
							}
						}
					}
				}
			}
		}
	},
