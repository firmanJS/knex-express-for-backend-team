{
	"name": "knex-express-api-boilerplate",
	"version": "1.0.0",
	"description": "express boilerplate with orm knex",
	"main": "main.ts",
	"scripts": {
		"build": "rm -rf build/ && tsc -b",
		"test:coverage": "jest --coverage --detectOpenHandles",
		"copy-lang": "cp -r src/lang/locale build/lang",
		"copy-swagger-path": "cp -r src/static/path build/static/path",
		"copy-swagger-schema": "cp -r src/static/schema build/static/schema",
		"copy-knexfile": "cp -r knexfile.js build/knexfile.js",
		"clean": "rm -rf build",
		"watch": "nodemon src/main",
		"dev": "yarn build && yarn watch",
		"start": "node ./build/main",
		"lint": "eslint --fix --ext .ts, .",
		"prepare": "husky install",
		"commit-rule": "npx husky add .husky/commit-msg 'yarn commitlint --edit $1'",
		"setup-husky": "yarn prepare && npx husky add .husky/pre-commit 'npx --no-install lint-staged' && yarn commit-rule"
	},
	"lint-staged": {
		"**/*.ts": [
			"eslint . --fix",
			"prettier --write ."
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/firmanJS/knex-express-for-backend-team.git"
	},
	"author": "@firmanJS",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/firmanJS/knex-express-for-backend-team/issues"
	},
	"homepage": "https://github.com/firmanJS/knex-express-for-backend-team#readme",
	"dependencies": {
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dayjs": "^1.11.10",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"express-validator": "^7.0.1",
		"helmet": "^7.1.0",
		"i18n": "^0.15.1",
		"jsonwebtoken": "^9.0.0",
		"knex": "^3.0.1",
		"morgan": "^1.10.0",
		"pg": "^8.7.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.3",
		"@commitlint/config-conventional": "^18.4.3",
		"@types/compression": "^1.7.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/i18n": "^0.13.6",
		"@types/jest": "^29.4.4",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/morgan": "^1.9.4",
		"@types/swagger-ui-express": "^4.1.3",
		"@typescript-eslint/eslint-plugin": "^6.13.2",
		"@typescript-eslint/parser": "^6.13.2",
		"commitizen": "^4.3.0",
		"eslint": "^8.13.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-config-semistandard": "^17.0.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^16.3.1",
		"eslint-plugin-promise": "^6.0.0",
		"husky": "^8.0.3",
		"jest": "^29.3.1",
		"jest-extended": "^4.0.2",
		"lint-staged": "^15.2.0",
		"node-mocks-http": "^1.12.1",
		"nodemon": "^3.0.2",
		"prettier": "^3.1.0",
		"swagger-ui-express": "^5.0.0",
		"test-jest": "^1.0.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.2"
	}
}
