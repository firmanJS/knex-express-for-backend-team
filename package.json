{
	"name": "knex-express-api-boilerplate",
	"version": "1.0.0",
	"description": "express boilerplate with orm knex",
	"main": "main.ts",
	"scripts": {
		"build": "rm -rf build/ && tsc",
		"test:coverage": "jest --coverage --detectOpenHandles",
		"copy-lang": "cp -r src/lang/locale build/lang",
		"copy-swagger-path": "cp -r src/static/path build/static/path",
		"copy-swagger-schema": "cp -r src/static/schema build/static/schema",
		"copy-knexfile": "cp -r knexfile.js build/knexfile.js",
		"clean": "rm -rf build",
		"watch": "nodemon src/main",
		"dev": "yarn build && yarn watch",
		"start": "yarn build && node ./build/main",
		"lint": "eslint --fix --ext .ts, .",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/firmanJS/knex-express-for-backend-team.git"
	},
	"author": "@firmanJS",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/firmanJS/knex-express-for-backend-team/issues"
	},
	"homepage": "https://github.com/firmanJS/knex-express-for-backend-team#readme",
	"dependencies": {
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"express-validator": "^7.0.1",
		"helmet": "^6.0.1",
		"i18n": "^0.15.1",
		"knex": "^2.1.0",
		"moment": "^2.29.4",
		"morgan": "^1.10.0",
		"pg": "^8.7.3",
		"swagger-ui-express": "^4.4.0"
	},
	"devDependencies": {
		"@types/compression": "^1.7.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/i18n": "^0.13.6",
		"@types/jest": "^29.4.4",
		"@types/morgan": "^1.9.4",
		"@types/swagger-ui-express": "^4.1.3",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"eslint": "^8.19.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-plugin-import": "^2.26.0",
		"husky": "^8.0.3",
		"jest": "^29.3.1",
		"jest-extended": "^3.2.4",
		"node-mocks-http": "^1.12.1",
		"nodemon": "^2.0.20",
		"test-jest": "^1.0.1",
		"typescript": "^5.0.2"
	}
}
