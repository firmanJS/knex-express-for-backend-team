{
  "name": "knex-express-api-boilerplate",
  "version": "1.0.0",
  "description": "express boilerplate with orm knex",
  "main": "main.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "start": "node src/main.js",
    "dev": "nodemon src/main.js",
    "lint": "eslint --fix --ext .js, .",
    "prepare": "husky install",
    "commit-rule": "npx husky add .husky/commit-msg 'yarn commitlint --edit $1'",
    "setup-husky": "yarn prepare && npx husky add .husky/pre-commit 'npx --no-install lint-staged' && yarn commit-rule"
  },
  "lint-staged": {
    "**/*.{js}": [
      "eslint . --fix",
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/firmanJS/knex-express-for-backend-team.git"
  },
  "author": "@firmanJS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/firmanJS/knex-express-for-backend-team/issues"
  },
  "homepage": "https://github.com/firmanJS/knex-express-for-backend-team#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-logger-logique": "^1.0.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "i18n": "^0.15.1",
    "jsonwebtoken": "^9.0.0",
    "knex": "^3.0.1",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "commitizen": "^4.3.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.0",
    "node-mocks-http": "^1.12.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0"
  }
}
